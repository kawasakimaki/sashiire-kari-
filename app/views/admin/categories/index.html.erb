<div class="container">
  <div class="row">
    <div class="m-4">
      <h4>カテゴリ一覧・追加</h4>
    </div>
  </div>

  <!--新規登録-->
  <div class="row">
    <div class="col-lg-12 mt-3">
      <table>
        <%=form_with model: @category,url:  admin_categories_path, method: :post do |f| %>
          <tr>
            <td><%= f.label :"カテゴリー名", class: "mr-3" %></td>
            <td><%= f.text_field :name, class: "mr-5" %></td>
            <td><%= f.submit'新規登録',class: "btn btn-outline-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <!--カテゴリ一覧-->
  <div class="row">
    <div class="col-lg-10 mt-3">
      <table class="table table-hover table-inverse my-3">

        <tr class="table-success">
          <th>ジャンル</th>
          <th></th>
        </tr>

        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-outline-success" %></td>
          </tr>
        <%end%>

      </table>
    </div>
  </div>
</div>