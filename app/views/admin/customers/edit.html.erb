<h4><%= @customer.name %>さんの会員情報編集</h4>

<%= form_with model: @customer do |f| %>
  <table>

    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <td>名前</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>

    <tr>
      <td>会員ステータス</td>
      <td>※必要になったらカラム追加する</td>
    </tr>

    <tr>
      <td></td>
      <td><%= link_to '変更を保存', admin_customer_path(customer)%></td>
    </tr>

  </table>
<% end %>