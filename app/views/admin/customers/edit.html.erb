<div class="container">

  <div class="row">
    <div class="m-4">
      <h4><%= @customer.name %>さんの会員情報編集</h4>
    </div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class="row">
      <div class="col-lg-10 mt-3">
        <table class="table table-hover table-inverse">

          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
            <td>名前</td>
            <td><%= f.text_field :name %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active_true, "有効" %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active_false, "退会" %>
            </td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit '変更を保存', class: "btn btn-outline-success" %></td>
          </tr>

        </table>
      </div>
    </div>
  <% end %>
</div>