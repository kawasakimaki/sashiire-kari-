<h4><%= @customer.name %>さんの会員情報編集</h4>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <table>

    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <td>名前</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>

    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active_true, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active_false, "退会" %>
      </td>
    </tr>

    <tr>
      <td></td>
      <td><%= f.submit '変更を保存' %></td>
    </tr>

  </table>
<% end %>