<h4>会員一覧</h4>

<table>

  <tr>
   <th>会員ID</th>
   <th>名前</th>
   <th>メールアドレス</th>
   <th>ステータス</th>
  </tr>

  <% @customers.each do |customer| %>
    <tr>
      <th><%= customer.id %></th>
      <th><%= link_to customer.name, admin_customer_path(customer) %></th>
      <th><%= customer.email %></th>
      <th>
         <% if customer.is_active %>
           <span class="text-success">有効</span>
         <% else %>
           <span class="text-secondary">退会</span>
         <% end %>
      </th>
    </tr>
  <% end %>

</table>

<%= paginate @customers %>