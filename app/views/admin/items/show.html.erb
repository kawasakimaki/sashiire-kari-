<h4>商品詳細</h4>

<%= image_tag @item.get_image, size:"400x350", class: "card-img-top", style: "object-fit: cover;" %>
<table>

  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <td>商品説明</td>
    <td><%= @item.description %></td>
  </tr>

  <tr>
    <td>値段</td>
    <td><%= @item.price.to_s(:delimited) %></td>
  </tr>

  <tr>
    <td>エリア</td>
    <td><%= @item.area %></td>
  </tr>

  <tr>
    <td>店舗名</td>
    <td><%= @item.store %></td>
  </tr>

  <tr>
    <td>投稿者</td>
    <td><%= @customer.name %></td>
  </tr>

  <tr>
    <td>カテゴリー名</td>
    <td><%= @item.category.name %></td>
  </tr>

  <!--コメント機能-->
    <tr>
      <td>コメント件数：<%= @item.comment_lists.count %></td>
    </tr>

    <tr>
      <% @item.comment_lists.each do |comment_list| %>
        <td><%= comment_list.customer.name %></td>
        <td><%= comment_list.created_at.strftime('%Y/%m/%d') %><%= comment_list.comment %></td>
        <td>
          <%= link_to 'Destroy', admin_item_comment_list_path(comment_list.item, comment_list), method: :delete %>
        </td>
      <% end %>
    </tr>

</table>