<div class="container">

  <div class="row">
    <div class="m-4">
      <div>
        <%= flash[:notice] %>
      </div><br>
      <h4>投稿一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-10 mt-3">
      <table class="table table-hover table-inverse">

        <tr class="table-success">
          <th>投稿日時</th>
          <th>商品名</th>
          <th>値段</th>
          <th>エリア</th>
          <th>店舗名</th>
          <th></th>
        </tr>

        <% @items.each do |item| %>
          <tr>
            <td><%= item.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to item.goods_name, admin_item_path(item.id), class: "link-color" %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.area %></td>
            <td><%= item.store %></td>
            <td><%= link_to 'Destroy', admin_item_path(item.id), class: "btn btn-outline-success", method: :delete %></td>
          </tr>
        <% end %>
        <%= paginate @items %>
      </table>
    </div>
  </div>
</div>