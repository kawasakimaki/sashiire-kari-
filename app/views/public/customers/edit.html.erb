<div class="container">

  <div class="row">
    <div class="m-4">
      <h4>my page editing</h4>
    </div>
  </div>

  <%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-lg-10 mt-3">
        <table class="table table-hover table-inverse">

          <tr>
            <td>name</td>
            <td><%= f.text_field :name %></td>
          </tr>

          <tr>
            <td>email</td>
            <td><%= f.email_field :email %></td>
          </tr>

          <tr>
            <td><%= f.submit 'update', class: "btn btn-outline-success" %></td>
            <td><%= link_to '退会する', unsubscribe_path, class: "btn btn-outline-success" %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>