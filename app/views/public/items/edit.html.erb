<div class="container">
  <div class="row">
    <div class="m-4 mx-auto">
      <h4>商品編集</h4>
    </div>
  </div>

  <%= form_with model: @item, url: item_path do |f| %>
    <div class="row">
      <div class="mx-auto" style="width: 500px;">
        <table class="item_post">

          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>

          <tr>
            <td>商品名</td>
            <td><%= f.text_field :goods_name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :description %></td>
          </tr>

          <tr>
            <td>カテゴリー</td>
            <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
          </tr>

          <tr>
            <td>価格</td>
            <td><%= f.number_field :price %>円</td>
          </tr>

          <tr>
            <td>エリア</td>
            <td><%= f.text_field :area %></td>
          </tr>

          <tr>
            <td>店舗名</td>
            <td><%= f.text_field :store %></td>
          </tr>
        </table>

        <label>タグ(,で区切ると複数タグ登録できます)</label>
        <%= f.text_field :name,value: @tag_list, class: 'form-control' %><br>
        <%= f.submit '編集する', class: "btn btn-outline-success" %>

      </div>
    </div>
  <% end %>
</div>