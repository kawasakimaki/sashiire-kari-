商品編集

<%= form_with model: @item, url: item_path do |f| %>

  <table>

    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>

    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :description %></td>
    </tr>

    <tr>
      <td>カテゴリー</td>
      <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
    </tr>

    <tr>
      <td>価格</td>
      <td><%= f.number_field :price %>円</td>
    </tr>

    <tr>
      <td>エリア</td>
      <td>%= f.text_field :area %></td>
    </tr>

    <tr>
      <td>店舗名</td>
      <td><%= f.text_field :store %></td>
    </tr>

    <tr>
      <td></td>
      <td><%= f.submit '編集する' %></td>
    </tr>

  </table>

<% end %>