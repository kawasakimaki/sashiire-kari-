<div class="container">

  <div class="row col-12 mx-auto py-5">
    <div class="sidebar col-3">
      <!--カテゴリ-->
      <%= render 'public/categories/category', categories: @categories %>
    </div>

    <!--商品詳細-->
    <div class="col-8 justify-content-center ml-5">
      <h4><%= @item.goods_name %></h4>
      <div class="row row-cols-1 row-cols-xl-4 row-cols-lg-3 row-cols-md-2 mx-auto p-2">
<div>
  <%= image_tag @item.get_image, size:"250x250", class: "card-img-top", style: "object-fit: cover;" %>
</div>

<table>
  <tr>
    <td><%= @item.area %></td>
    <td></td>
    <td><%= @item.store %></td>
  </tr>

  <tr>
    <td><%= @item.category.name %></td>
    <td><%= @item.price.to_s.reverse.scan(/.{1,3}/).join(',').reverse %>円</td>
  </tr>

<tr>
  <td>投稿者：<%= @customer.name %></td>
</tr>

<p><%= @item.description %></p>

<% if @item.customer == current_customer %>
  <tr>
    <td>
      <%= link_to 'Edit',  edit_item_path, class: "btn btn-success" %>
    </td>
    <td>
      <%= link_to 'Destroy', item_path, class: "btn btn-danger", method: :delete %>
    </td>
  </tr>
<% end %>

<!--いいね機能-->
<% if @item.like_listed_by?(current_customer) %>
    <tr>
      <td>
      <%= link_to item_like_lists_path(@item), method: :delete do %>
        ♥<%= @item.like_lists.count %> いいね
      <% end %>
    <% else %>
      <%= link_to item_like_lists_path(@item), method: :post do %>
        ♡<%= @item.like_lists.count %> いいね
      <% end %>
      </td>
    </tr>
<% end %>

<!--コメント機能-->
    <tr>
      <td>コメント件数：<%= @item.comment_lists.count %></td>
    </tr>

    <tr>
      <% @item.comment_lists.each do |comment_list| %>
        <td><%= comment_list.customer.name %></td>
        <td><%= comment_list.created_at.strftime('%Y/%m/%d') %><%= comment_list.comment %></td>
        <td>
          <% if comment_list.customer == current_customer %>
            <%= link_to 'Destroy', item_comment_list_path(comment_list.item, comment_list), method: :delete %>
          <% end %>
        </td>
      <% end %>
      <%= form_with model: [@item, @comment_list] do |f| %>
        <td><%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %></td>
        <td><%= f.submit "送信する" %></td>
      <% end %>
    </tr>
</table>

<!-- タグリスト -->
      <% @item_tags.each do |tag| %>
      <i class="fa-sharp fa-solid fa-tag"></i>
        <%= link_to tag.name,search_tag_path(tag_id: tag.id) %>
      <% end %>
      </div>