<!--カテゴリ-->
<%= render 'public/categories/category', categories: @categories %>

<!--商品詳細-->
<div class>
  <%= image_tag @item.get_image, size:"250x250", class: "card-img-top", style: "object-fit: cover;" %>
</div>

<h4><%= @item.name %></h4>

<table>
  <tr>
    <td><%= @item.area %></td>
    <td></td>
    <td><%= @item.store %></td>
  </tr>

  <tr>
    <td><%= @item.category.name %></td>
    <td><%= @item.price.to_s.reverse.scan(/.{1,3}/).join(',').reverse %>円</td>
  </tr>

<p>投稿者：<%= @customer.name %></p>


<p><%= @item.description %></p>

<% if @customer == current_customer %>
  <td>
    <%= link_to 'Edit',  edit_item_path, class: "btn btn-success" %>
  </td>
  <td>
    <%= link_to 'Destroy',  edit_item_path, class: "btn btn-danger", method: :delete %>
  </td>
<% end %>

</table>