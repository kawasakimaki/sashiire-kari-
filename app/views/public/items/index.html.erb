<!--カテゴリ-->
<%= render 'public/categories/category', categories: @categories %>

<!--商品一覧-->
<h4>商品一覧（全<%= @item_amount.all.count %>件）</h4>

<table>
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.get_image, size:"200x150", class: "card-img-top", style: "object-fit: cover;" %></td>
      <td><%= link_to item.name, item_path(item.id), class: "text-dark" %></td>
      <td><%= item.price.to_s(:delimited) %>円</td>
    </tr>
  <% end %>
</table>

<%= paginate @items %>